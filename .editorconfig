# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true


[{*.js,*.json,*.vue}]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
block_comment_start = /**
block_comment = *
block_comment_end = */

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2


